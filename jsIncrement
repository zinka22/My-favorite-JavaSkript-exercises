// BEGIN (write your solution here)
const makeItFunny = (text, x) => {
    let result = '';
    let i = 0;
    while(i < text.length) {
        if ((i+1) % x === 0) {
    	    result = `${result}${text[i].toUpperCase()}`;
        }
        else {
    	    result = `${result}${text[i]}`;
        }
        i++;
    }
    return result;
};
// END

export default makeItFunny;
